.side
  .side__name
    = current_user.name
    = link_to edit_user_path(current_user) do
      = fa_icon 'cog'
    = link_to new_group_path do
      = fa_icon 'pencil-square-o'
  .side__comment
    - current_user.groups.each do |group|
      = link_to group_comments_path(group) do
        %p.name
          = group.name
        %p.comment
          message
