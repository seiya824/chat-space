
.contents
  .contents__group
    .contents__group-left
      %h4 group
      %p member
    = link_to "edit", "/groups/1/edit"
  .contents__comment
    %p.name
      name
    %p.day daytime
    %p.comment
      comment
  .contents__form
    %form{action: "/index", method: "post"}
      %input.form-message{type: "text" ,placeholder: "type a message"}
      %label.upload-label{for: "upload-icon"}
        %i.fa.fa-picture-o
        %input.upload-image{type: "file", id: "upload-icon"}
      %input.form-send{type: "submit", value: "Send"}
